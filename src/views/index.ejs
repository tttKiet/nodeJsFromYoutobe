<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="css/styles.css" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <title>Node js</title>
  </head>
  <body>
    <div class="topnav">
      <a class="active" href="#home">Home</a>
      <a href="#news">News</a>
      <a href="#contact">Contact</a>
      <a href="#about">About</a>
    </div>

    <div>
      <div class="w3-container">
        <h2>List Users Table</h2>

        <table class="w3-table-all w3-hoverable">
          <thead>
            <tr class="w3-light-grey">
              <th>Id</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% for(let i = 0; i < dataUsers.length; i++) { %>
            <tr>
              <td><%= dataUsers[i].id %></td>
              <td><%= dataUsers[i].firstName %></td>
              <td><%= dataUsers[i].lastName %></td>
              <td>
                <a href="/detail/user/<%= dataUsers[i].id %>" >
                  <button type="button" class="btn btn-primary">Details</button>
                </a>
                <a href="/edit-user/<%= dataUsers[i].id %> ">
                  <button type="button" class="btn btn-edit">Edit</button>
                </a>
                <button
                  type="button"
                  data-id="<%= dataUsers[i].id  %>"
                  class="btn btn-delete"
                >
                  Delete
                </button>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>

      <div class="create-user-container">
        <h1>Create a new user:</h1>

        <form class="container" action="/create-new-user" method="post">
          <div class="col-auto mt-4">
            <label for="First">First name: </label>
            <input
              type="text"
              class="form-control"
              id="First"
              placeholder="Fisrt"
              name="firstName"
            />
          </div>
          <div class="col-auto mt-4">
            <label for="Last">Last name:</label>
            <input
              type="text"
              class="form-control"
              id="Last"
              placeholder="Last"
              name="lastName"
            />
          </div>

          <div class="col-auto mt-4">
            <label for="Last">Email:</label>
            <input
              type="email"
              class="form-control"
              id="Last"
              placeholder="Email"
              name="email"
            />
          </div>

          <div class="col-auto mt-4">
            <label for="address">Address:</label>
            <input
              type="text"
              class="form-control"
              id="address"
              placeholder="Address"
              name="address"
            />
          </div>

          <div class="col-auto">
            <button type="submit" class="btn btn-primary mb-5 mt-4">
              Create User
            </button>
          </div>
        </form>
      </div>
    </div>

    <!-- form -->

    <form name="delete-user" method="post"></form>
    <script
      src="https://code.jquery.com/jquery-3.6.3.js"
      integrity="sha256-nQLuAZGRRcILA+6dMBOvcRh5Pe310sBpanc6+QBmyVM="
      crossorigin="anonymous"
    ></script>
    <script>
      // Initialize the editor
      const formDeleteUser = $('form[name="delete-user"]');
      const btnDelete = $(".btn-delete");
      btnDelete.click(function (e) {
        ///delete-user/:id
        const button = e.target;
        formDeleteUser.prop("action", `/delete-user/${button.dataset.id}`);
        formDeleteUser.submit();
      });
    </script>
  </body>
</html>
